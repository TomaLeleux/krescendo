<div id="albums-carousel" class="carousel slide" data-interval="false" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#albums-carousel" data-slide-to="0" class="active"></li>
    <% counter = (@albums["data"].size / 2) %>
    <% counter.times do |i| %>
      <li data-target="#albums-carousel" data-slide-to='<%= "#{i + 1}" %>' class></li>
    <% end %>
  </ol>
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <div class="row hidden-xs hidden-sm">
        <% @albums["data"].first(2).each do |album| %>
          <div class="col-xs-6 col-md-4 col-md-offset-1">
            <%= render 'components/album_card', album: album %>
          </div>
        <% end %>
      </div>
      <div class="row hidden-md hidden-lg">
        <% @albums["data"].first(2).each do |album| %>
          <div class="col-xs-6 col-md-4 col-md-offset-1">
            <%= render 'components/album_card', album: album %>
          </div>
        <% end %>
      </div>
    </div>

    <% @albums["data"].drop(2).each_slice(2) do |three_album| %>
      <div class="item">
        <div class="row">
          <% three_album.each do |album| %>
            <div class="col-xs-6 col-md-4 col-md-offset-2">
              <%= render 'components/album_card', album: album %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <a class="left carousel-control" href="#albums-carousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#albums-carousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

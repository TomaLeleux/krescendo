<div id="albums-carousel" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#albums-carousel" data-slide-to="0" class="active"></li>
  </ol>
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <div class="row">
        <% @albums["data"].each do |album| %>
          <div class="col-xs-2 col-xs-offset-2">
            <%= render 'components/album_card', album: album %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <a class="left carousel-control" href="#albums-carousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#albums-carousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div id="artists-carousel" class="carousel slide" data-interval="false" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#artists-carousel" data-slide-to="0" class="active"></li>
    <% related = DeezerApiService.related_artists(@artist["id"]) %>
    <% counter = related["data"].size / 3 %>
    <% counter.times do |i| %>
      <li data-target="#artists-carousel" data-slide-to='<%= "#{i + 1}" %>' class></li>
    <% end %>
  </ol>
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <div class="row hidden-xs hidden-sm desktop">
        <% related["data"].first(3).each do |artist| %>
          <div class="col-xs-1 col-xs-offset-2">
            <%= render 'components/related_card', artist: artist %>
          </div>
        <% end %>
      </div>
      <div class="row hidden-md hidden-lg mobile">
        <% related["data"].first(1).each do |artist| %>
          <div class="col-xs-12 col-md-3 col-md-offset-2">
            <%= render 'components/related_card', artist: artist %>
          </div>
        <% end %>
      </div>
    </div>
    <% related["data"].drop(3).each_slice(3) do |four_artist| %>
      <div class="item hidden-xs hidden-sm desktop">
        <div class="row">
          <% four_artist.each do |artist| %>
            <div class="col-xs-1 col-xs-offset-2">
              <%= render 'components/related_card', artist: artist %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <% related["data"].drop(1).each_slice(1) do |four_artist| %>
      <div class="item hidden-md hidden-lg mobile">
        <div class="row">
          <% four_artist.each do |artist| %>
            <div class="col-xs-12 col-md-3 col-md-offset-2">
              <%= render 'components/related_card', artist: artist %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

  </div>
  <a class="left carousel-control" href="#artists-carousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#artists-carousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
